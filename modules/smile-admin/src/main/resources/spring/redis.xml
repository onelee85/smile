<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
        default-lazy-init="true">

    <bean id="redisConnectionFactory"
          class="org.springframework.data.redis.connection.jedis.JedisConnectionFactory"
          p:hostName="${redis.host}" p:port="${redis.port}" p:database="${redis.dbIndex}"/>
    <bean id="mainRedis" class="org.springframework.data.redis.core.StringRedisTemplate"
          p:connectionFactory-ref="redisConnectionFactory" />
    <bean id="seqKGS" class="com.ttpod.rest.persistent.SimpleKGS" p:nameSpace="seq" p:kgsRedis-ref="mainRedis"/>
    <bean id="userKGS" class="com.ttpod.rest.persistent.HighLowKGS"
          p:nameSpace="users" p:kgsRedis-ref="mainRedis" p:step="10" p:offset="100000"/>
    <bean id="songKGS" class="com.ttpod.rest.persistent.HighLowKGS"
          p:nameSpace="song" p:kgsRedis-ref="mainRedis" p:step="10" p:offset="100000"/>


    <bean id="liveRedisConnectionFactory"
          class="org.springframework.data.redis.connection.jedis.JedisConnectionFactory"
          p:hostName="${redis.host}" p:port="${redis.mem.port}" p:database="${redis.dbIndex}"/>
    <bean id="liveRedis" class="org.springframework.data.redis.core.StringRedisTemplate"
          p:connectionFactory-ref="redisConnectionFactory" />
</beans>